---
import MainLayout from '@/layouts/MainLayout.astro';
import BlogCard from '@/components/blog/BlogCard.astro';
import { blogApi } from '@/lib/api';
import { BLOG_CATEGORIES } from '@/lib/data';

const title = 'Trekking Blog | Tips, Guides & Stories';
const description = 'Expert trekking guides, travel tips, gear reviews, and inspiring stories from the Himalayas. Plan your next adventure with our comprehensive articles.';

// Fetch blog posts from API
let featuredPosts: any[] = [];
let recentPosts: any[] = [];
let allTags: string[] = [];

try {
  featuredPosts = await blogApi.getFeaturedPosts(1);
  const response = await blogApi.listPosts(0, 10);
  recentPosts = response.items || [];
  
  // Extract unique tags from all posts
  allTags = [...new Set(recentPosts.flatMap((post: any) => post.tags || []))];
} catch (error) {
  console.error('Error fetching blog posts:', error);
  // Fallback to empty arrays if API fails
}
---

<MainLayout title={title} description={description}>
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-secondary-600 via-secondary-700 to-secondary-800 text-white py-16 md:py-24">
    <div class="container-custom">
      <div class="max-w-3xl">
        <span class="inline-block px-4 py-1.5 bg-white/10 border border-white/20 text-white/90 rounded-full text-sm font-medium mb-6">
          üìö Trekking Knowledge Hub
        </span>
        <h1 class="text-4xl md:text-5xl font-bold mb-6">
          Trek Guides, Tips & <span class="text-primary-400">Stories</span>
        </h1>
        <p class="text-xl text-neutral-300 mb-8">
          Expert advice, detailed guides, and inspiring stories to help you plan your perfect Himalayan adventure.
        </p>
        
        <!-- Search Bar -->
        <div class="relative max-w-xl">
          <input
            type="search"
            id="blog-search"
            placeholder="Search articles..."
            class="w-full px-5 py-4 pl-12 rounded-xl bg-white/10 backdrop-blur border border-white/20 text-white placeholder-white/60 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent"
          />
          <svg class="absolute left-4 top-1/2 -translate-y-1/2 w-5 h-5 text-white/60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
          </svg>
        </div>
      </div>
    </div>
  </section>

  <!-- Main Content -->
  <section class="section">
    <div class="container-custom">
      {recentPosts.length === 0 ? (
        <div class="text-center py-12">
          <p class="text-neutral-500 text-lg">No blog posts available yet. Check back soon!</p>
        </div>
      ) : (
        <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
          
          <!-- Main Content Column -->
          <div class="lg:col-span-3">
            
            <!-- Featured Post -->
            {featuredPosts.length > 0 && (
              <div class="mb-12">
                <h2 class="text-2xl font-bold text-secondary-600 mb-6 flex items-center gap-2">
                  <span class="text-primary-500">‚≠ê</span> Featured Article
                </h2>
                <BlogCard post={featuredPosts[0]} featured={true} />
              </div>
            )}

            <!-- Category Pills -->
            <div class="flex flex-wrap gap-2 mb-8">
              <button class="category-btn px-4 py-2 rounded-full text-sm font-medium bg-primary-500 text-white transition-colors" data-category="all">
                All Posts
              </button>
              {BLOG_CATEGORIES.map((category) => (
                <button 
                  class="category-btn px-4 py-2 rounded-full text-sm font-medium bg-neutral-100 text-neutral-600 hover:bg-primary-100 hover:text-primary-700 transition-colors"
                  data-category={category.value}
                >
                  {category.icon} {category.label}
                </button>
              ))}
            </div>

            <!-- Articles Grid -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
              {recentPosts.filter((p: any) => !featuredPosts.some((f: any) => f.id === p.id)).map((post: any) => (
                <BlogCard post={post} />
              ))}
            </div>

            <!-- Load More -->
            <div class="text-center mt-12">
              <button id="load-more" class="btn-secondary">
                Load More Articles
                <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
              </button>
            </div>
          </div>

          <!-- Sidebar -->
          <div class="lg:col-span-1">
            <div class="sticky top-24 space-y-8">
              
              <!-- Categories Widget -->
              <div class="bg-white rounded-2xl border border-neutral-200 p-6">
                <h3 class="font-bold text-secondary-600 mb-4">Categories</h3>
                <ul class="space-y-2">
                  {BLOG_CATEGORIES.map((category) => {
                    const count = recentPosts.filter((p: any) => p.category === category.value).length;
                    return (
                      <li>
                        <a 
                          href={`/blog?category=${category.value}`}
                          class="flex items-center justify-between py-2 text-neutral-600 hover:text-primary-600 transition-colors"
                        >
                          <span class="flex items-center gap-2">
                            <span>{category.icon}</span>
                            {category.label}
                          </span>
                          <span class="text-sm bg-neutral-100 px-2 py-0.5 rounded-full">{count}</span>
                        </a>
                      </li>
                    );
                  })}
                </ul>
              </div>

              <!-- Popular Tags -->
              {allTags.length > 0 && (
                <div class="bg-white rounded-2xl border border-neutral-200 p-6">
                  <h3 class="font-bold text-secondary-600 mb-4">Popular Tags</h3>
                  <div class="flex flex-wrap gap-2">
                    {allTags.slice(0, 15).map((tag: string) => (
                      <a 
                        href={`/blog?tag=${tag.toLowerCase().replace(/\s+/g, '-')}`}
                        class="text-sm bg-neutral-100 text-neutral-600 px-3 py-1.5 rounded-full hover:bg-primary-100 hover:text-primary-700 transition-colors"
                      >
                        #{tag}
                      </a>
                    ))}
                  </div>
                </div>
              )}

              <!-- Newsletter -->
              <div class="bg-gradient-to-br from-primary-500 to-primary-600 rounded-2xl p-6 text-white">
                <h3 class="font-bold text-xl mb-2">Get Trek Updates</h3>
                <p class="text-white/80 text-sm mb-4">
                  Subscribe to receive latest trek guides and exclusive offers.
                </p>
                <form class="space-y-3">
                  <input
                    type="email"
                    placeholder="Your email"
                    class="w-full px-4 py-3 rounded-lg bg-white/20 border border-white/30 text-white placeholder-white/60 focus:outline-none focus:ring-2 focus:ring-white/50"
                  />
                  <button type="submit" class="w-full px-4 py-3 bg-white text-primary-600 font-semibold rounded-lg hover:bg-neutral-100 transition-colors">
                    Subscribe
                  </button>
                </form>
              </div>

              <!-- Popular Posts -->
              {featuredPosts.length > 0 && (
                <div class="bg-white rounded-2xl border border-neutral-200 p-6">
                  <h3 class="font-bold text-secondary-600 mb-4">Popular Articles</h3>
                  <ul class="space-y-4">
                    {recentPosts.slice(0, 4).map((post: any, index: number) => (
                      <li>
                        <a href={`/blog/${post.slug}`} class="flex gap-3 group">
                          <span class="text-2xl font-bold text-primary-200 group-hover:text-primary-400 transition-colors">
                            0{index + 1}
                          </span>
                          <div>
                            <h4 class="text-sm font-medium text-secondary-600 group-hover:text-primary-600 transition-colors line-clamp-2">
                              {post.title}
                            </h4>
                            <span class="text-xs text-neutral-500">{post.readTime} min read</span>
                          </div>
                        </a>
                      </li>
                    ))}
                  </ul>
                </div>
              )}

            </div>
          </div>
        </div>
      )}
    </div>
  </section>
</MainLayout>

<script>
  // Category filtering (client-side for demo)
  const categoryBtns = document.querySelectorAll('.category-btn');
  categoryBtns.forEach(btn => {
    btn.addEventListener('click', () => {
      categoryBtns.forEach(b => {
        b.classList.remove('bg-primary-500', 'text-white');
        b.classList.add('bg-neutral-100', 'text-neutral-600');
      });
      btn.classList.add('bg-primary-500', 'text-white');
      btn.classList.remove('bg-neutral-100', 'text-neutral-600');
      // In production, this would filter posts
    });
  });

  // Search functionality (client-side for demo)
  const searchInput = document.getElementById('blog-search') as HTMLInputElement;
  searchInput?.addEventListener('input', (e) => {
    const query = (e.target as HTMLInputElement).value.toLowerCase();
    // In production, this would filter/search posts
    console.log('Searching for:', query);
  });
</script>
