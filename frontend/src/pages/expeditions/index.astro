---
import MainLayout from '@/layouts/MainLayout.astro';
import ExpeditionCard from '@/components/expedition/ExpeditionCard.astro';
import { SITE_CONFIG } from '@/lib/constants';
import { expeditionsApi, api } from '@/lib/api';
import type { Expedition } from '@/lib/types';
import { EXPEDITIONS } from '@/lib/data';

export const prerender = false;

const title = 'Himalayan Expeditions | High Altitude Mountaineering';
const description = 'Join our expert-led mountaineering expeditions to summit legendary Himalayan peaks. Black Peak, Friendship Peak and more with certified guides and safety protocols.';

interface PageSection {
  title?: string | null;
  subtitle?: string | null;
  badge_text?: string | null;
  body_html?: string | null;
}

let expeditions: Expedition[] = [];
let heroSection: PageSection | null = null;
let safetySection: PageSection | null = null;

try {
  const [expeditionResponse, contentSections] = await Promise.all([
    expeditionsApi.list({ status: 'published', limit: 20 }),
    api.get<PageSection[]>(`/content/expeditions`),
  ]);

  expeditions = expeditionResponse.items || [];
  heroSection = (contentSections || []).find((s: any) => s.key === 'hero') || null;
  safetySection = (contentSections || []).find((s: any) => s.key === 'safety') || null;
} catch (error) {
  console.error('Failed to fetch expeditions or content from API, falling back to static data:', error);
  expeditions = EXPEDITIONS;
}
---

<MainLayout title={title} description={description}>
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-secondary-900 via-secondary-800 to-secondary-900 text-white py-20 md:py-28 overflow-hidden">
    <!-- Background Pattern -->
    <div class="absolute inset-0 opacity-10">
      <svg class="w-full h-full" viewBox="0 0 100 100" preserveAspectRatio="none">
        <polygon fill="currentColor" points="0,100 50,0 100,100" />
      </svg>
    </div>
    
    <div class="container-custom relative z-10">
      <div class="max-w-3xl">
        {heroSection?.badge_text && (
          <span class="inline-block px-4 py-1.5 bg-red-500/20 border border-red-500/30 text-red-300 rounded-full text-sm font-medium mb-6">
            {heroSection.badge_text}
          </span>
        )}
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 leading-tight">
          {heroSection?.title || (
            <>
              Himalayan <span class="text-primary-400">Expeditions</span>
            </>
          )}
        </h1>
        <p class="text-xl text-neutral-300 mb-8 leading-relaxed">
          {heroSection?.subtitle || 'Push your limits with expertly guided mountaineering expeditions. From technical climbing to summit glory, experience the Himalayas like never before.'}
        </p>
        
        <!-- Quick Stats -->
        <div class="flex flex-wrap gap-6">
          <div class="flex items-center gap-2">
            <div class="w-10 h-10 rounded-full bg-white/10 flex items-center justify-center">
              <svg class="w-5 h-5 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18" />
              </svg>
            </div>
            <div>
              <div class="font-bold">6,387m</div>
              <div class="text-sm text-neutral-400">Highest Summit</div>
            </div>
          </div>
          <div class="flex items-center gap-2">
            <div class="w-10 h-10 rounded-full bg-white/10 flex items-center justify-center">
              <svg class="w-5 h-5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <div>
              <div class="font-bold">85%</div>
              <div class="text-sm text-neutral-400">Success Rate</div>
            </div>
          </div>
          <div class="flex items-center gap-2">
            <div class="w-10 h-10 rounded-full bg-white/10 flex items-center justify-center">
              <svg class="w-5 h-5 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
              </svg>
            </div>
            <div>
              <div class="font-bold">Expert Guides</div>
              <div class="text-sm text-neutral-400">Certified Team</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Main Content -->
  <section class="section">
    <div class="container-custom">
      <!-- Safety Banner -->
      <div class="bg-gradient-to-r from-red-50 to-orange-50 border border-red-200 rounded-2xl p-6 mb-12">
        <div class="flex items-start gap-4">
          <div class="w-12 h-12 rounded-full bg-red-100 flex items-center justify-center flex-shrink-0">
            <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
            </svg>
          </div>
          <div>
            <h3 class="font-bold text-red-800 mb-1">
              {safetySection?.title || 'Safety First Approach'}
            </h3>
            {safetySection?.body_html ? (
              <p class="text-red-700 text-sm" set:html={safetySection.body_html}></p>
            ) : (
              <p class="text-red-700 text-sm">
                All our expeditions are led by certified mountaineers with emergency protocols, satellite communication, and insurance coverage. Previous high-altitude experience is required for most expeditions.
              </p>
            )}
          </div>
        </div>
      </div>

      <!-- Expedition Cards -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-12">
        {expeditions.map((expedition) => (
          <ExpeditionCard expedition={expedition} />
        ))}
      </div>

      <!-- Coming Soon -->
      <div class="bg-neutral-100 rounded-2xl p-8 text-center">
        <h3 class="text-xl font-bold text-secondary-600 mb-3">More Expeditions Coming Soon</h3>
        <p class="text-neutral-600 mb-6">
          We're adding more challenging expeditions including Stok Kangri, Deo Tibba, and Mt. Kanamo. Stay tuned!
        </p>
        <a href="/contact" class="btn-primary">
          Get Notified
          <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- Why Choose Us for Expeditions -->
  <section class="section bg-secondary-900 text-white">
    <div class="container-custom">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">
          Why Climb With Us?
        </h2>
        <p class="text-neutral-300 max-w-2xl mx-auto">
          Our expedition team combines experience, safety, and passion to give you the best chance at summiting your dream peak.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="bg-white/5 backdrop-blur rounded-2xl p-8 border border-white/10">
          <div class="w-14 h-14 rounded-xl bg-primary-500/20 flex items-center justify-center mb-5">
            <svg class="w-7 h-7 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-3">Certified Guides</h3>
          <p class="text-neutral-400">
            Our guides are certified mountaineers with extensive experience on Himalayan peaks and emergency response training.
          </p>
        </div>

        <div class="bg-white/5 backdrop-blur rounded-2xl p-8 border border-white/10">
          <div class="w-14 h-14 rounded-xl bg-green-500/20 flex items-center justify-center mb-5">
            <svg class="w-7 h-7 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-3">Technical Training</h3>
          <p class="text-neutral-400">
            All expeditions include technical training sessions for ice craft, rope work, and high-altitude survival skills.
          </p>
        </div>

        <div class="bg-white/5 backdrop-blur rounded-2xl p-8 border border-white/10">
          <div class="w-14 h-14 rounded-xl bg-blue-500/20 flex items-center justify-center mb-5">
            <svg class="w-7 h-7 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-3">Safety Equipment</h3>
          <p class="text-neutral-400">
            We provide all technical gear, emergency oxygen, satellite phones, and maintain strict safety protocols throughout.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="section">
    <div class="container-custom">
      <div class="bg-gradient-to-r from-primary-500 to-primary-600 rounded-3xl p-8 md:p-12 text-center text-white">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">Ready to Conquer Your Peak?</h2>
        <p class="text-lg text-white/90 mb-8 max-w-2xl mx-auto">
          Our team is ready to help you prepare for your expedition. Get in touch to discuss your goals and experience level.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href={`https://wa.me/916383313359?text=Hi%2C%20I%27m%20interested%20in%20joining%20an%20expedition.`}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-white text-primary-600 font-semibold rounded-xl hover:bg-neutral-100 transition-colors"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M.057 24l1.687-6.163c-1.041-1.804-1.588-3.849-1.587-5.929C.15 5.184 5.185.15 12.201.15c3.611 0 7.043 1.411 9.592 3.959 2.549 2.549 3.96 5.98 3.96 9.592 0 7.016-5.035 12.05-12.051 12.05-1.981 0-3.91-.555-5.618-1.617l-6.177 1.688zm6.598-3.807c-.339-.195-2.267-1.173-2.619-1.308-.35-.135-.609-.203-.868.203-.259.407-1.026 1.308-1.255 1.576-.228.269-.457.29-.849.082-1.465-.735-3.06-1.894-4.363-3.565-.971-1.272-.647-1.95-.457-2.22.195-.269.437-.466.666-.705.229-.239.306-.427.464-.646.16-.203.08-.38-.04-.533-.12-.154-.868-2.07-.18-2.443.69-.373 1.365.054 1.66.258.295.204.463.503.609.693.145.19.971 1.577 1.175 1.95.204.373.219.407.054.646-.16.239-.259.373-.498.609-.229.239-.498.307-.767.34-.269.034-.529.034-.797-.041zm7.593 3.409c1.59-.077 4.019-.767 5.609-1.533.98-.489 1.746-1.12 2.267-1.656.643-.665.931-1.545.931-2.653 0-1.952-.95-3.218-1.37-3.447z" />
            </svg>
            Chat on WhatsApp
          </a>
          <a href="/contact" class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-transparent border-2 border-white text-white font-semibold rounded-xl hover:bg-white/10 transition-colors">
            Contact Us
          </a>
        </div>
      </div>
    </div>
  </section>
</MainLayout>

