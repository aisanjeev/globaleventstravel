---
import ExpeditionLayout from '@/layouts/ExpeditionLayout.astro';
import ExpeditionCard from '@/components/expedition/ExpeditionCard.astro';
import { expeditionsApi, api } from '@/lib/api';
import type { Expedition } from '@/lib/types';

export const prerender = false;

const title = 'Himalayan Expeditions | High Altitude Mountaineering';
const description = 'Join our expert-led mountaineering expeditions to summit legendary Himalayan peaks. Black Peak, Friendship Peak and more with certified guides and safety protocols.';

interface PageSection {
  title?: string | null;
  subtitle?: string | null;
  badge_text?: string | null;
  body_html?: string | null;
}

let expeditions: Expedition[] = [];
let heroSection: PageSection | null = null;
let safetySection: PageSection | null = null;

try {
  const [expeditionResponse, contentSections] = await Promise.all([
    expeditionsApi.list({ status: 'published', limit: 20 }),
    api.get<PageSection[]>(`/content/expeditions`),
  ]);

  expeditions = expeditionResponse.items || [];
  heroSection = (contentSections || []).find((s: any) => s.key === 'hero') || null;
  safetySection = (contentSections || []).find((s: any) => s.key === 'safety') || null;
} catch (error) {
  console.error('Failed to fetch expeditions or content from API:', error);
}

const featuredExpedition = expeditions.find((e) => e.featured) || expeditions[0];
const otherExpeditions = expeditions.filter((e) => e.slug !== featuredExpedition?.slug);
const highestSummit = expeditions.length ? Math.max(...expeditions.map((e) => e.summitAltitude)) : 6387;

// Collect gallery images from all expeditions for Past Summit Gallery
const galleryImages: { src: string; name: string; altitude: number; slug: string }[] = [];
expeditions.forEach((exp) => {
  if (exp.gallery?.length) {
    exp.gallery.slice(0, 2).forEach((src) => {
      galleryImages.push({ src, name: exp.name, altitude: exp.summitAltitude, slug: exp.slug });
    });
  } else if (exp.image) {
    galleryImages.push({ src: exp.image, name: exp.name, altitude: exp.summitAltitude, slug: exp.slug });
  }
});
---

<ExpeditionLayout title={title} description={description}>
  <!-- Cinematic Hero -->
  <section class="relative h-[70vh] min-h-[500px]">
    <img
      src={featuredExpedition?.image || '/images/hero/og-default.jpg'}
      alt="Himalayan Expeditions"
      class="absolute inset-0 w-full h-full object-cover"
    />
    <div class="absolute inset-0 bg-gradient-to-t from-royal-800/90 via-royal-600/70 to-royal-600/30"></div>
    <div class="absolute inset-0 flex items-end">
      <div class="container-custom w-full pb-12 md:pb-16">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-6 leading-tight max-w-4xl">
          {heroSection?.title || 'Himalayan Expeditions'}
        </h1>
        <p class="text-xl text-white/90 mb-8 max-w-2xl leading-relaxed">
          {heroSection?.subtitle || 'Technical ascents for experienced climbers. Summit legendary peaks with certified guides and proven safety protocols.'}
        </p>
        <div class="flex flex-wrap gap-6">
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 rounded-full bg-primary-500/20 flex items-center justify-center">
              <svg class="w-5 h-5 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18" />
              </svg>
            </div>
            <div>
              <div class="font-bold text-white">{highestSummit.toLocaleString()}m</div>
              <div class="text-sm text-white/80">Highest Summit</div>
            </div>
          </div>
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 rounded-full bg-primary-500/20 flex items-center justify-center">
              <svg class="w-5 h-5 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <div>
              <div class="font-bold text-white">85%</div>
              <div class="text-sm text-white/80">Success Rate</div>
            </div>
          </div>
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 rounded-full bg-primary-500/20 flex items-center justify-center">
              <svg class="w-5 h-5 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
              </svg>
            </div>
            <div>
              <div class="font-bold text-white">Expert Guides</div>
              <div class="text-sm text-white/80">Certified Team</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Experience Requirement -->
  <section class="section bg-white py-16 md:py-20">
    <div class="container-custom">
      <div class="max-w-4xl">
        <h2 class="text-2xl md:text-3xl font-bold text-secondary-600 mb-6">Designed for Experienced Climbers</h2>
        <p class="text-neutral-600 mb-8 leading-relaxed">
          Our expeditions are not introductory treks. Participants are expected to have prior high-altitude experience, strong fitness, and basic technical climbing skills.
        </p>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <div class="flex items-start gap-4 p-6 rounded-xl bg-white border border-neutral-200 shadow-lg shadow-secondary-100">
            <div class="w-12 h-12 rounded-full bg-primary-100 flex items-center justify-center flex-shrink-0">
              <svg class="w-6 h-6 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18" />
              </svg>
            </div>
            <div>
              <h3 class="font-semibold text-secondary-600 mb-2">Prior Altitude Experience</h3>
              <p class="text-neutral-600 text-sm">Previous trekking above 4,500m or mountaineering experience recommended.</p>
            </div>
          </div>
          <div class="flex items-start gap-4 p-6 rounded-xl bg-white border border-neutral-200 shadow-lg shadow-secondary-100">
            <div class="w-12 h-12 rounded-full bg-primary-100 flex items-center justify-center flex-shrink-0">
              <svg class="w-6 h-6 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
              </svg>
            </div>
            <div>
              <h3 class="font-semibold text-secondary-600 mb-2">Fitness Level</h3>
              <p class="text-neutral-600 text-sm">Excellent physical condition. Multi-day trekking with heavy packs.</p>
            </div>
          </div>
          <div class="flex items-start gap-4 p-6 rounded-xl bg-white border border-neutral-200 shadow-lg shadow-secondary-100">
            <div class="w-12 h-12 rounded-full bg-primary-100 flex items-center justify-center flex-shrink-0">
              <svg class="w-6 h-6 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
              </svg>
            </div>
            <div>
              <h3 class="font-semibold text-secondary-600 mb-2">Technical Skills</h3>
              <p class="text-neutral-600 text-sm">Ice axe, crampons, rope work. Training provided on expedition.</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Expedition -->
  {featuredExpedition && (
    <section class="section bg-neutral-100 py-16 md:py-20">
      <div class="container-custom">
        <p class="text-primary-600 font-semibold text-sm uppercase tracking-wider mb-4">Featured Expedition</p>
        <ExpeditionCard expedition={featuredExpedition} featured />
      </div>
    </section>
  )}

  <!-- All Expeditions Grid -->
  {otherExpeditions.length > 0 && (
    <section class="section bg-white py-16 md:py-20">
      <div class="container-custom">
        <h2 class="text-3xl md:text-4xl font-bold text-slate-900 mb-8">All Expeditions</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          {otherExpeditions.map((expedition) => (
            <ExpeditionCard expedition={expedition} />
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Safety Commitment -->
  <section class="section bg-royal-50 py-16 md:py-20">
    <div class="container-custom">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-3xl md:text-4xl font-bold text-secondary-600 mb-6">
            {safetySection?.title || 'Safety First'}
          </h2>
          {safetySection?.body_html ? (
            <div class="text-neutral-600 prose prose-neutral max-w-none" set:html={safetySection.body_html}></div>
          ) : (
            <p class="text-neutral-600 leading-relaxed">
              All our expeditions are led by certified mountaineers with emergency protocols, satellite communication, and insurance coverage. Previous high-altitude experience is required for most expeditions.
            </p>
          )}
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div class="p-6 rounded-xl bg-white border border-neutral-200 shadow-sm">
            <div class="w-12 h-12 rounded-xl bg-primary-100 flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
              </svg>
            </div>
            <h3 class="font-semibold text-secondary-600 mb-2">Certified Guides</h3>
            <p class="text-neutral-600 text-sm">Extensive Himalayan experience and emergency response training.</p>
          </div>
          <div class="p-6 rounded-xl bg-white border border-neutral-200 shadow-sm">
            <div class="w-12 h-12 rounded-xl bg-primary-100 flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <h3 class="font-semibold text-secondary-600 mb-2">Safety Equipment</h3>
            <p class="text-neutral-600 text-sm">Technical gear, emergency oxygen, satellite phones included.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Past Summit Gallery -->
  {galleryImages.length > 0 && (
    <section class="section bg-white py-16 md:py-20">
      <div class="container-custom">
        <h2 class="text-3xl md:text-4xl font-bold text-secondary-600 mb-8">Past Summits</h2>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
          {galleryImages.slice(0, 8).map(({ src, name, altitude, slug }) => (
            <a
              href={`/expeditions/${slug}`}
              class="group block relative aspect-[4/3] rounded-xl overflow-hidden"
            >
              <img
                src={src}
                alt={name}
                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                loading="lazy"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent"></div>
              <div class="absolute inset-0 bg-primary-500/0 group-hover:bg-primary-500/20 transition-colors"></div>
              <div class="absolute bottom-0 left-0 right-0 p-4">
                <p class="font-semibold text-white text-sm drop-shadow-sm">{name}</p>
                <p class="text-primary-400 text-xs font-medium">{altitude.toLocaleString()}m</p>
              </div>
            </a>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- CTA Section -->
  <section class="section bg-royal-600 py-16 md:py-24">
    <div class="container-custom">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">Ready to Conquer Your Peak?</h2>
        <p class="text-white/90 text-lg mb-8">
          Our team is ready to help you prepare for your expedition. Discuss your goals and experience level.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="/contact?interest=expedition"
            class="btn-primary inline-flex items-center justify-center gap-2 px-8 py-4 text-lg"
          >
            Apply Now
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
            </svg>
          </a>
          <a
            href={`https://wa.me/916383313359?text=Hi%2C%20I%27m%20interested%20in%20joining%20an%20expedition.`}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center justify-center gap-2 px-8 py-4 border-2 border-white text-white font-semibold rounded-xl hover:bg-white/10 transition-colors"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M.057 24l1.687-6.163c-1.041-1.804-1.588-3.849-1.587-5.929C.15 5.184 5.185.15 12.201.15c3.611 0 7.043 1.411 9.592 3.959 2.549 2.549 3.96 5.98 3.96 9.592 0 7.016-5.035 12.05-12.051 12.05-1.981 0-3.91-.555-5.618-1.617l-6.177 1.688z" />
            </svg>
            Chat on WhatsApp
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Coming Soon -->
  <section class="section bg-neutral-100 py-12">
    <div class="container-custom">
      <div class="bg-white rounded-2xl p-8 text-center border border-neutral-200 shadow-sm">
        <h3 class="text-xl font-bold text-secondary-600 mb-3">More Expeditions Coming Soon</h3>
        <p class="text-neutral-600 mb-6">
          Stok Kangri, Deo Tibba, Mt. Kanamo and more. Stay tuned for announcements.
        </p>
        <a href="/contact?interest=expedition" class="btn-primary inline-flex items-center gap-2">
          Get Notified
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
          </svg>
        </a>
      </div>
    </div>
  </section>
</ExpeditionLayout>
