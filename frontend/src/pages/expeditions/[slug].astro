---
import ExpeditionLayout from '@/layouts/ExpeditionLayout.astro';
import { expeditionsApi } from '@/lib/api';
import type { Expedition } from '@/lib/types';
import TrekLeadForm from '@/components/forms/TrekLeadForm';

export const prerender = false;

const { slug } = Astro.params;

let expedition: Expedition | null = null;

try {
  expedition = await expeditionsApi.getBySlug(slug as string);
} catch (error) {
  console.error('Failed to fetch expedition by slug:', slug, error);
}

if (!expedition) {
  return Astro.redirect('/expeditions');
}

const title = `${expedition.name} | ${expedition.summitAltitude}m Expedition`;
const description = expedition.shortDescription;

const formatPrice = (price: number) => {
  return new Intl.NumberFormat('en-IN', {
    style: 'currency',
    currency: 'INR',
    maximumFractionDigits: 0,
  }).format(price);
};

const difficultyColors = {
  advanced: 'bg-orange-100 text-orange-800 border-orange-200',
  expert: 'bg-red-100 text-red-800 border-red-200',
  extreme: 'bg-purple-100 text-purple-800 border-purple-200',
};
---

<ExpeditionLayout title={title} description={description}>
  <!-- Hero Section -->
  <section class="relative h-[65vh] min-h-[500px]">
    <img
      src={expedition.image}
      alt={expedition.name}
      class="w-full h-full object-cover"
    />
    <div class="absolute inset-0 bg-gradient-to-t from-royal-800/80 via-royal-600/50 to-royal-600/30"></div>
    
    <div class="absolute bottom-0 left-0 right-0 p-8 md:p-12">
      <div class="container-custom">
        <div class="flex flex-wrap items-center gap-3 mb-4">
          <span class={`px-3 py-1.5 rounded-full text-sm font-semibold capitalize border ${difficultyColors[expedition.difficulty]}`}>
            {expedition.difficulty}
          </span>
          <span class="px-3 py-1.5 bg-primary-500/20 backdrop-blur-sm text-white rounded-full text-sm font-medium border border-primary-400/30">
            {expedition.duration} Days
          </span>
          <span class="px-3 py-1.5 bg-primary-500/20 backdrop-blur-sm text-white rounded-full text-sm font-medium flex items-center gap-1 border border-primary-400/30">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            {expedition.successRate}% Success
          </span>
        </div>
        
        <h1 class="text-4xl md:text-5xl font-bold text-white mb-2">
          {expedition.name}
        </h1>
        <p class="text-primary-400 text-lg mb-4">Apply for the {expedition.summitAltitude.toLocaleString()}m technical ascent</p>
        
        <div class="flex items-center gap-4 text-white/90">
          <span class="flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
            </svg>
            {expedition.location}
          </span>
          <span class="flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18" />
            </svg>
            Summit: {expedition.summitAltitude.toLocaleString()}m
          </span>
        </div>
      </div>
    </div>
  </section>

  <!-- Main Content -->
  <section class="section">
    <div class="container-custom">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Main Content -->
        <div class="lg:col-span-2 space-y-8">
          <!-- Overview -->
          <div class="bg-white rounded-2xl border border-neutral-200 p-6 md:p-8">
            <h2 class="text-2xl font-bold text-secondary-600 mb-4">Overview</h2>
            <div
              class="text-neutral-600 leading-relaxed prose prose-neutral max-w-none"
              set:html={expedition.description}
            ></div>
          </div>

          <!-- Highlights -->
          <div class="bg-white rounded-2xl border border-neutral-200 p-6 md:p-8">
            <h2 class="text-2xl font-bold text-secondary-600 mb-6">Expedition Highlights</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              {(expedition.highlights || []).map((highlight) => (
                <div class="flex items-start gap-3 p-4 bg-primary-50 rounded-xl">
                  <svg class="w-5 h-5 text-primary-600 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <span class="text-neutral-700">{highlight}</span>
                </div>
              ))}
            </div>
          </div>

          <!-- Requirements -->
          <div class="bg-white rounded-2xl border border-neutral-200 p-6 md:p-8">
            <h2 class="text-2xl font-bold text-secondary-600 mb-6">Requirements</h2>
            <div class="space-y-6">
              <div>
                <h3 class="font-semibold text-secondary-600 mb-2 flex items-center gap-2">
                  <svg class="w-5 h-5 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  Previous Experience
                </h3>
                <p class="text-neutral-600 ml-7">{expedition.requirements.experience}</p>
              </div>
              <div>
                <h3 class="font-semibold text-secondary-600 mb-2 flex items-center gap-2">
                  <svg class="w-5 h-5 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                  </svg>
                  Fitness Level
                </h3>
                <p class="text-neutral-600 ml-7">{expedition.requirements.fitnessLevel}</p>
              </div>
              <div>
                <h3 class="font-semibold text-secondary-600 mb-2 flex items-center gap-2">
                  <svg class="w-5 h-5 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
                  </svg>
                  Technical Skills
                </h3>
                {expedition.requirements?.technicalSkills && (
                  <ul class="text-neutral-600 ml-7 list-disc list-inside space-y-1">
                    {expedition.requirements.technicalSkills.map((skill) => (
                      <li>{skill}</li>
                    ))}
                  </ul>
                )}
              </div>
            </div>
          </div>

          <!-- Day-by-Day Itinerary -->
          <div class="bg-white rounded-2xl border border-neutral-200 p-6 md:p-8">
            <h2 class="text-2xl font-bold text-secondary-600 mb-6">Day-by-Day Itinerary</h2>
            <div class="space-y-4">
              {(expedition.itinerary || []).map((day) => (
                <div class="relative pl-8 pb-6 border-l-2 border-primary-200 last:border-0 last:pb-0">
                  <div class="absolute left-0 -translate-x-1/2 w-4 h-4 rounded-full bg-primary-500 border-4 border-white"></div>
                  <div class="bg-neutral-50 rounded-xl p-5">
                    <div class="flex items-center justify-between mb-2">
                      <span class="text-sm font-medium text-primary-600 bg-primary-100 px-2.5 py-1 rounded-full">
                        Day {day.day}
                      </span>
                      <span class="text-sm text-neutral-500 flex items-center gap-1">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18" />
                        </svg>
                        {day.altitude.toLocaleString()}m
                      </span>
                    </div>
                    <h3 class="font-semibold text-secondary-600 mb-2">{day.title}</h3>
                    <p class="text-neutral-600 text-sm mb-3">{day.description}</p>
                    {day.activities && (
                      <div class="flex flex-wrap gap-2">
                        {day.activities.map((activity) => (
                          <span class="text-xs bg-white border border-neutral-200 text-neutral-600 px-2 py-1 rounded-full">
                            {activity}
                          </span>
                        ))}
                      </div>
                    )}
                  </div>
                </div>
              ))}
            </div>
          </div>

          <!-- Equipment -->
          <div class="bg-white rounded-2xl border border-neutral-200 p-6 md:p-8">
            <h2 class="text-2xl font-bold text-secondary-600 mb-6">Equipment</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
              <div>
                <h3 class="font-semibold text-green-700 mb-4 flex items-center gap-2">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  Provided by Us
                </h3>
                {expedition.equipment?.provided && (
                  <ul class="space-y-2">
                    {expedition.equipment.provided.map((item) => (
                      <li class="flex items-start gap-2 text-neutral-600 text-sm">
                        <svg class="w-4 h-4 text-green-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                        </svg>
                        {item}
                      </li>
                    ))}
                  </ul>
                )}
              </div>
              <div>
                <h3 class="font-semibold text-blue-700 mb-4 flex items-center gap-2">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                  </svg>
                  You Need to Bring
                </h3>
                {expedition.equipment?.personal && (
                  <ul class="space-y-2">
                    {expedition.equipment.personal.map((item) => (
                      <li class="flex items-start gap-2 text-neutral-600 text-sm">
                        <svg class="w-4 h-4 text-blue-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                        </svg>
                        {item}
                      </li>
                    ))}
                  </ul>
                )}
              </div>
            </div>
          </div>

          <!-- Photo Gallery -->
          {expedition.gallery && expedition.gallery.length > 0 && (
            <div class="bg-white rounded-2xl border border-neutral-200 p-6 md:p-8">
              <h2 class="text-2xl font-bold text-secondary-600 mb-6 flex items-center gap-2">
                <svg class="w-6 h-6 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                Photo Gallery
              </h2>
              <div class="grid grid-cols-2 md:grid-cols-3 gap-4" id="gallery-grid">
                {expedition.gallery.map((imageUrl, index) => (
                  <button 
                    type="button"
                    class="gallery-item group relative aspect-[4/3] rounded-lg overflow-hidden border border-neutral-200 hover:border-primary-500 transition-colors cursor-pointer"
                    data-index={index}
                    data-src={imageUrl}
                  >
                    <img 
                      src={imageUrl} 
                      alt={`${expedition.name} - Photo ${index + 1}`}
                      class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                      loading="lazy"
                    />
                    <div class="absolute inset-0 bg-black/0 group-hover:bg-black/20 transition-colors flex items-center justify-center">
                      <svg class="w-8 h-8 text-white opacity-0 group-hover:opacity-100 transition-opacity" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0zM10 7v3m0 0v3m0-3h3m-3 0H7" />
                      </svg>
                    </div>
                  </button>
                ))}
              </div>
            </div>
          )}

          <!-- Lightbox Modal for Gallery -->
          {expedition.gallery && expedition.gallery.length > 0 && (
            <div id="lightbox" class="fixed inset-0 z-[100] hidden">
              <!-- Backdrop -->
              <div id="lightbox-backdrop" class="absolute inset-0 bg-black/95 backdrop-blur-sm"></div>
              
              <!-- Close Button -->
              <button 
                id="lightbox-close" 
                type="button"
                class="absolute top-4 right-4 z-10 p-2 text-white/80 hover:text-white transition-colors"
              >
                <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
              </button>

              <!-- Navigation - Previous -->
              <button 
                id="lightbox-prev" 
                type="button"
                class="absolute left-4 top-1/2 -translate-y-1/2 z-10 p-3 text-white/80 hover:text-white bg-black/30 hover:bg-black/50 rounded-full transition-all"
              >
                <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                </svg>
              </button>

              <!-- Navigation - Next -->
              <button 
                id="lightbox-next" 
                type="button"
                class="absolute right-4 top-1/2 -translate-y-1/2 z-10 p-3 text-white/80 hover:text-white bg-black/30 hover:bg-black/50 rounded-full transition-all"
              >
                <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </button>

              <!-- Image Container -->
              <div class="absolute inset-0 flex items-center justify-center p-4 md:p-16">
                <img 
                  id="lightbox-image" 
                  src="" 
                  alt="Gallery image"
                  class="max-w-full max-h-full object-contain rounded-lg shadow-2xl"
                />
              </div>

              <!-- Image Counter -->
              <div class="absolute bottom-4 left-1/2 -translate-x-1/2 text-white/80 text-sm font-medium bg-black/50 px-4 py-2 rounded-full">
                <span id="lightbox-current">1</span> / <span id="lightbox-total">{expedition.gallery.length}</span>
              </div>

              <!-- Thumbnail Strip -->
              <div class="absolute bottom-16 left-1/2 -translate-x-1/2 flex gap-2 overflow-x-auto max-w-[90vw] pb-2" id="lightbox-thumbnails">
                {expedition.gallery.map((imageUrl, index) => (
                  <button 
                    type="button"
                    class="lightbox-thumb flex-shrink-0 w-16 h-12 rounded overflow-hidden opacity-50 hover:opacity-100 transition-opacity border-2 border-transparent"
                    data-index={index}
                  >
                    <img 
                      src={imageUrl} 
                      alt={`Thumbnail ${index + 1}`}
                      class="w-full h-full object-cover"
                    />
                  </button>
                ))}
              </div>
            </div>
          )}

          <!-- Safety Info -->
          {expedition.safetyInfo && (
            <div class="bg-red-50 border border-red-200 rounded-2xl p-6 md:p-8">
              <h2 class="text-xl font-bold text-red-800 mb-4 flex items-center gap-2">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                </svg>
                Safety Information
              </h2>
              <p class="text-red-700">{expedition.safetyInfo}</p>
            </div>
          )}
        </div>

        <!-- Sidebar -->
        <div class="lg:col-span-1">
          <div class="sticky top-24 space-y-6">
            <!-- Booking Card -->
            <div class="bg-white rounded-2xl border border-neutral-200 p-6 shadow-lg">
              <div class="mb-6">
                <p class="text-primary-600 font-semibold text-sm mb-2">Designed for experienced climbers</p>
                <p class="text-neutral-600 text-sm mb-4 line-clamp-2">{expedition.requirements.experience}</p>
                <div class="pt-4 border-t border-neutral-100">
                  <span class="text-xs text-neutral-500">Starting from</span>
                  <div class="text-2xl font-bold text-secondary-600">{formatPrice(expedition.price)}</div>
                  <span class="text-xs text-neutral-500">per person</span>
                </div>
              </div>

              <!-- Quick Facts -->
              <div class="space-y-4 mb-6 py-6 border-y border-neutral-100">
                <div class="flex items-center justify-between">
                  <span class="text-neutral-600 text-sm">Duration</span>
                  <span class="font-semibold text-secondary-600">{expedition.duration} Days</span>
                </div>
                <div class="flex items-center justify-between">
                  <span class="text-neutral-600 text-sm">Summit Altitude</span>
                  <span class="font-semibold text-primary-600">{expedition.summitAltitude.toLocaleString()}m</span>
                </div>
                <div class="flex items-center justify-between">
                  <span class="text-neutral-600 text-sm">Group Size</span>
                  <span class="font-semibold text-secondary-600">
                    {expedition.groupSize?.min && expedition.groupSize?.max
                      ? `${expedition.groupSize.min}-${expedition.groupSize.max} people`
                      : 'N/A'}
                  </span>
                </div>
                <div class="flex items-center justify-between">
                  <span class="text-neutral-600 text-sm">Difficulty</span>
                  <span class={`px-2.5 py-1 rounded-full text-xs font-semibold capitalize ${difficultyColors[expedition.difficulty]}`}>
                    {expedition.difficulty}
                  </span>
                </div>
                <div class="flex items-center justify-between">
                  <span class="text-neutral-600 text-sm">Success Rate</span>
                  <span class="font-semibold text-primary-600">{expedition.successRate}%</span>
                </div>
              </div>

              <!-- Best Seasons -->
              <div class="mb-6">
                <span class="text-sm text-neutral-500 block mb-2">Best Seasons</span>
                <div class="flex flex-wrap gap-2">
                  {(expedition.season || []).map((month) => (
                    <span class="bg-primary-50 text-primary-700 px-3 py-1 rounded-full text-sm font-medium">
                      {month}
                    </span>
                  ))}
                </div>
              </div>

              <!-- CTA Buttons -->
              <div class="space-y-3">
                <a
                  href={`https://wa.me/916383313359?text=Hi%2C%20I%20would%20like%20to%20apply%20for%20the%20${encodeURIComponent(expedition.name)}%20Expedition%20(${expedition.summitAltitude}m).`}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="btn-primary w-full justify-center"
                >
                  Apply Now
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                  </svg>
                </a>
                <a href="/contact?interest=expedition" class="w-full justify-center inline-flex items-center px-6 py-3 border-2 border-secondary-600 text-secondary-600 font-medium rounded-lg hover:bg-secondary-50 transition-colors">
                  Contact Us
                </a>
              </div>
            </div>

            <!-- Rating Card -->
            <div class="bg-white rounded-2xl border border-neutral-200 p-6">
              <div class="flex items-center gap-3 mb-4">
                <div class="text-3xl font-bold text-primary-600">{expedition.rating}</div>
                <div>
                  <div class="flex text-primary-500">
                    {[1, 2, 3, 4, 5].map((i) => (
                      <svg class={`w-5 h-5 ${i <= Math.floor(expedition.rating) ? '' : 'opacity-30'}`} fill="currentColor" viewBox="0 0 20 20">
                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                      </svg>
                    ))}
                  </div>
                  <div class="text-sm text-neutral-500">{expedition.reviewCount} reviews</div>
                </div>
              </div>
            </div>

            <!-- Lead Capture Form (desktop only) -->
            <div class="hidden lg:block">
              <TrekLeadForm
                client:load
                trekName={expedition.name}
                trekSlug={expedition.slug}
                trekPrice={formatPrice(expedition.price)}
                source="expedition_page"
                variant="expedition"
              />
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Mobile Sticky CTA -->
  <div class="fixed bottom-0 left-0 right-0 bg-royal-600 border-t border-royal-700 p-4 shadow-lg z-40 lg:hidden">
    <div class="flex items-center justify-between">
      <div>
        <span class="text-sm text-white/80">Starting from</span>
        <div class="text-xl font-bold text-white">{formatPrice(expedition.price)}</div>
      </div>
      <a
        href={`https://wa.me/916383313359?text=Hi%2C%20I%20would%20like%20to%20apply%20for%20the%20${encodeURIComponent(expedition.name)}%20Expedition.`}
        target="_blank"
        rel="noopener noreferrer"
        class="btn-primary flex items-center gap-2"
      >
        Apply Now
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
        </svg>
      </a>
    </div>
  </div>
</ExpeditionLayout>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Lightbox Gallery functionality
    const lightbox = document.getElementById('lightbox');
    const lightboxImage = document.getElementById('lightbox-image') as HTMLImageElement;
    const lightboxCurrent = document.getElementById('lightbox-current');
    const lightboxClose = document.getElementById('lightbox-close');
    const lightboxBackdrop = document.getElementById('lightbox-backdrop');
    const lightboxPrev = document.getElementById('lightbox-prev');
    const lightboxNext = document.getElementById('lightbox-next');
    const galleryItems = document.querySelectorAll('.gallery-item');
    const thumbnails = document.querySelectorAll('.lightbox-thumb');

    if (!lightbox || !lightboxImage || galleryItems.length === 0) return;

    let currentIndex = 0;
    const images: string[] = [];

    // Collect all image URLs
    galleryItems.forEach((item) => {
      const src = item.getAttribute('data-src');
      if (src) images.push(src);
    });

    // Open lightbox
    const openLightbox = (index: number) => {
      currentIndex = index;
      updateLightbox();
      lightbox.classList.remove('hidden');
      document.body.style.overflow = 'hidden';
    };

    // Close lightbox
    const closeLightbox = () => {
      lightbox.classList.add('hidden');
      document.body.style.overflow = '';
    };

    // Update lightbox image and counter
    const updateLightbox = () => {
      if (lightboxImage && images[currentIndex]) {
        lightboxImage.src = images[currentIndex];
      }
      if (lightboxCurrent) {
        lightboxCurrent.textContent = String(currentIndex + 1);
      }
      // Update thumbnail active state
      thumbnails.forEach((thumb, i) => {
        if (i === currentIndex) {
          thumb.classList.add('opacity-100', 'border-white');
          thumb.classList.remove('opacity-50', 'border-transparent');
        } else {
          thumb.classList.remove('opacity-100', 'border-white');
          thumb.classList.add('opacity-50', 'border-transparent');
        }
      });
    };

    // Navigate to previous image
    const prevImage = () => {
      currentIndex = (currentIndex - 1 + images.length) % images.length;
      updateLightbox();
    };

    // Navigate to next image
    const nextImage = () => {
      currentIndex = (currentIndex + 1) % images.length;
      updateLightbox();
    };

    // Event listeners for gallery items
    galleryItems.forEach((item) => {
      item.addEventListener('click', () => {
        const index = parseInt(item.getAttribute('data-index') || '0', 10);
        openLightbox(index);
      });
    });

    // Event listeners for thumbnails
    thumbnails.forEach((thumb) => {
      thumb.addEventListener('click', () => {
        const index = parseInt(thumb.getAttribute('data-index') || '0', 10);
        currentIndex = index;
        updateLightbox();
      });
    });

    // Close button
    lightboxClose?.addEventListener('click', closeLightbox);
    
    // Backdrop click to close
    lightboxBackdrop?.addEventListener('click', closeLightbox);

    // Navigation buttons
    lightboxPrev?.addEventListener('click', prevImage);
    lightboxNext?.addEventListener('click', nextImage);    // Keyboard navigation
    document.addEventListener('keydown', (e) => {
      if (lightbox.classList.contains('hidden')) return;
      
      if (e.key === 'Escape') closeLightbox();
      if (e.key === 'ArrowLeft') prevImage();
      if (e.key === 'ArrowRight') nextImage();
    });

    // Touch/swipe support for mobile
    let touchStartX = 0;
    let touchEndX = 0;

    lightbox.addEventListener('touchstart', (e) => {
      touchStartX = e.changedTouches[0].screenX;
    }, { passive: true });

    lightbox.addEventListener('touchend', (e) => {
      touchEndX = e.changedTouches[0].screenX;
      const swipeThreshold = 50;
      
      if (touchStartX - touchEndX > swipeThreshold) {
        nextImage(); // Swipe left = next
      } else if (touchEndX - touchStartX > swipeThreshold) {
        prevImage(); // Swipe right = prev
      }
    }, { passive: true });
  });
</script>
