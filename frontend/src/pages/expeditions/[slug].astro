---
import MainLayout from '@/layouts/MainLayout.astro';
import { EXPEDITIONS, getExpeditionBySlug } from '@/lib/data';
import { SITE_CONFIG } from '@/lib/constants';

export async function getStaticPaths() {
  return EXPEDITIONS.map((expedition) => ({
    params: { slug: expedition.slug },
  }));
}

const { slug } = Astro.params;
const expedition = getExpeditionBySlug(slug as string);

if (!expedition) {
  return Astro.redirect('/404');
}

const title = `${expedition.name} | ${expedition.summitAltitude}m Expedition`;
const description = expedition.shortDescription;

const formatPrice = (price: number) => {
  return new Intl.NumberFormat('en-IN', {
    style: 'currency',
    currency: 'INR',
    maximumFractionDigits: 0,
  }).format(price);
};

const difficultyColors = {
  advanced: 'bg-orange-100 text-orange-800 border-orange-200',
  expert: 'bg-red-100 text-red-800 border-red-200',
  extreme: 'bg-purple-100 text-purple-800 border-purple-200',
};
---

<MainLayout title={title} description={description}>
  <!-- Hero Section -->
  <section class="relative h-[60vh] min-h-[500px]">
    <img
      src={expedition.image}
      alt={expedition.name}
      class="w-full h-full object-cover"
    />
    <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/40 to-transparent"></div>
    
    <div class="absolute bottom-0 left-0 right-0 p-8 md:p-12">
      <div class="container-custom">
        <div class="flex flex-wrap items-center gap-3 mb-4">
          <span class={`px-3 py-1.5 rounded-full text-sm font-semibold capitalize border ${difficultyColors[expedition.difficulty]}`}>
            {expedition.difficulty}
          </span>
          <span class="px-3 py-1.5 bg-white/20 backdrop-blur-sm text-white rounded-full text-sm font-medium">
            {expedition.duration} Days
          </span>
          <span class="px-3 py-1.5 bg-green-500/20 backdrop-blur-sm text-green-300 rounded-full text-sm font-medium flex items-center gap-1">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            {expedition.successRate}% Success
          </span>
        </div>
        
        <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">
          {expedition.name}
        </h1>
        
        <div class="flex items-center gap-4 text-white/80">
          <span class="flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
            </svg>
            {expedition.location}
          </span>
          <span class="flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18" />
            </svg>
            Summit: {expedition.summitAltitude.toLocaleString()}m
          </span>
        </div>
      </div>
    </div>
  </section>

  <!-- Main Content -->
  <section class="section">
    <div class="container-custom">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Main Content -->
        <div class="lg:col-span-2 space-y-8">
          <!-- Overview -->
          <div class="bg-white rounded-2xl border border-neutral-200 p-6 md:p-8">
            <h2 class="text-2xl font-bold text-secondary-600 mb-4">Overview</h2>
            <p class="text-neutral-600 leading-relaxed">{expedition.description}</p>
          </div>

          <!-- Highlights -->
          <div class="bg-white rounded-2xl border border-neutral-200 p-6 md:p-8">
            <h2 class="text-2xl font-bold text-secondary-600 mb-6">Expedition Highlights</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              {expedition.highlights.map((highlight) => (
                <div class="flex items-start gap-3 p-4 bg-primary-50 rounded-xl">
                  <svg class="w-5 h-5 text-primary-600 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <span class="text-neutral-700">{highlight}</span>
                </div>
              ))}
            </div>
          </div>

          <!-- Requirements -->
          <div class="bg-white rounded-2xl border border-neutral-200 p-6 md:p-8">
            <h2 class="text-2xl font-bold text-secondary-600 mb-6">Requirements</h2>
            <div class="space-y-6">
              <div>
                <h3 class="font-semibold text-secondary-600 mb-2 flex items-center gap-2">
                  <svg class="w-5 h-5 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  Previous Experience
                </h3>
                <p class="text-neutral-600 ml-7">{expedition.requirements.experience}</p>
              </div>
              <div>
                <h3 class="font-semibold text-secondary-600 mb-2 flex items-center gap-2">
                  <svg class="w-5 h-5 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                  </svg>
                  Fitness Level
                </h3>
                <p class="text-neutral-600 ml-7">{expedition.requirements.fitnessLevel}</p>
              </div>
              <div>
                <h3 class="font-semibold text-secondary-600 mb-2 flex items-center gap-2">
                  <svg class="w-5 h-5 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
                  </svg>
                  Technical Skills
                </h3>
                <ul class="text-neutral-600 ml-7 list-disc list-inside space-y-1">
                  {expedition.requirements.technicalSkills.map((skill) => (
                    <li>{skill}</li>
                  ))}
                </ul>
              </div>
            </div>
          </div>

          <!-- Day-by-Day Itinerary -->
          <div class="bg-white rounded-2xl border border-neutral-200 p-6 md:p-8">
            <h2 class="text-2xl font-bold text-secondary-600 mb-6">Day-by-Day Itinerary</h2>
            <div class="space-y-4">
              {expedition.itinerary.map((day, index) => (
                <div class="relative pl-8 pb-6 border-l-2 border-primary-200 last:border-0 last:pb-0">
                  <div class="absolute left-0 -translate-x-1/2 w-4 h-4 rounded-full bg-primary-500 border-4 border-white"></div>
                  <div class="bg-neutral-50 rounded-xl p-5">
                    <div class="flex items-center justify-between mb-2">
                      <span class="text-sm font-medium text-primary-600 bg-primary-100 px-2.5 py-1 rounded-full">
                        Day {day.day}
                      </span>
                      <span class="text-sm text-neutral-500 flex items-center gap-1">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18" />
                        </svg>
                        {day.altitude.toLocaleString()}m
                      </span>
                    </div>
                    <h3 class="font-semibold text-secondary-600 mb-2">{day.title}</h3>
                    <p class="text-neutral-600 text-sm mb-3">{day.description}</p>
                    <div class="flex flex-wrap gap-2">
                      {day.activities.map((activity) => (
                        <span class="text-xs bg-white border border-neutral-200 text-neutral-600 px-2 py-1 rounded-full">
                          {activity}
                        </span>
                      ))}
                    </div>
                  </div>
                </div>
              ))}
            </div>
          </div>

          <!-- Equipment -->
          <div class="bg-white rounded-2xl border border-neutral-200 p-6 md:p-8">
            <h2 class="text-2xl font-bold text-secondary-600 mb-6">Equipment</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
              <div>
                <h3 class="font-semibold text-green-700 mb-4 flex items-center gap-2">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  Provided by Us
                </h3>
                <ul class="space-y-2">
                  {expedition.equipment.provided.map((item) => (
                    <li class="flex items-start gap-2 text-neutral-600 text-sm">
                      <svg class="w-4 h-4 text-green-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                      </svg>
                      {item}
                    </li>
                  ))}
                </ul>
              </div>
              <div>
                <h3 class="font-semibold text-blue-700 mb-4 flex items-center gap-2">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                  </svg>
                  You Need to Bring
                </h3>
                <ul class="space-y-2">
                  {expedition.equipment.personal.map((item) => (
                    <li class="flex items-start gap-2 text-neutral-600 text-sm">
                      <svg class="w-4 h-4 text-blue-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                      </svg>
                      {item}
                    </li>
                  ))}
                </ul>
              </div>
            </div>
          </div>

          <!-- Safety Info -->
          {expedition.safetyInfo && (
            <div class="bg-red-50 border border-red-200 rounded-2xl p-6 md:p-8">
              <h2 class="text-xl font-bold text-red-800 mb-4 flex items-center gap-2">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                </svg>
                Safety Information
              </h2>
              <p class="text-red-700">{expedition.safetyInfo}</p>
            </div>
          )}
        </div>

        <!-- Sidebar -->
        <div class="lg:col-span-1">
          <div class="sticky top-24 space-y-6">
            <!-- Booking Card -->
            <div class="bg-white rounded-2xl border border-neutral-200 p-6 shadow-sm">
              <div class="text-center mb-6">
                <span class="text-sm text-neutral-500">Starting from</span>
                <div class="text-4xl font-bold text-secondary-600">{formatPrice(expedition.price)}</div>
                <span class="text-sm text-neutral-500">per person</span>
              </div>

              <!-- Quick Facts -->
              <div class="space-y-4 mb-6 py-6 border-y border-neutral-100">
                <div class="flex items-center justify-between">
                  <span class="text-neutral-600 text-sm">Duration</span>
                  <span class="font-semibold text-secondary-600">{expedition.duration} Days</span>
                </div>
                <div class="flex items-center justify-between">
                  <span class="text-neutral-600 text-sm">Summit Altitude</span>
                  <span class="font-semibold text-secondary-600">{expedition.summitAltitude.toLocaleString()}m</span>
                </div>
                <div class="flex items-center justify-between">
                  <span class="text-neutral-600 text-sm">Group Size</span>
                  <span class="font-semibold text-secondary-600">{expedition.groupSize.min}-{expedition.groupSize.max} people</span>
                </div>
                <div class="flex items-center justify-between">
                  <span class="text-neutral-600 text-sm">Difficulty</span>
                  <span class={`px-2.5 py-1 rounded-full text-xs font-semibold capitalize ${difficultyColors[expedition.difficulty]}`}>
                    {expedition.difficulty}
                  </span>
                </div>
                <div class="flex items-center justify-between">
                  <span class="text-neutral-600 text-sm">Success Rate</span>
                  <span class="font-semibold text-green-600">{expedition.successRate}%</span>
                </div>
              </div>

              <!-- Best Seasons -->
              <div class="mb-6">
                <span class="text-sm text-neutral-500 block mb-2">Best Seasons</span>
                <div class="flex flex-wrap gap-2">
                  {expedition.season.map((month) => (
                    <span class="bg-primary-50 text-primary-700 px-3 py-1 rounded-full text-sm font-medium">
                      {month}
                    </span>
                  ))}
                </div>
              </div>

              <!-- CTA Buttons -->
              <div class="space-y-3">
                <a
                  href={`https://wa.me/${SITE_CONFIG.phone.replace(/\s/g, '')}?text=Hi%2C%20I%27m%20interested%20in%20the%20${expedition.name}%20Expedition.`}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="btn-primary w-full justify-center"
                >
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M.057 24l1.687-6.163c-1.041-1.804-1.588-3.849-1.587-5.929C.15 5.184 5.185.15 12.201.15c3.611 0 7.043 1.411 9.592 3.959 2.549 2.549 3.96 5.98 3.96 9.592 0 7.016-5.035 12.05-12.051 12.05-1.981 0-3.91-.555-5.618-1.617l-6.177 1.688z" />
                  </svg>
                  Enquire on WhatsApp
                </a>
                <a href="/contact" class="btn-secondary w-full justify-center">
                  Contact Us
                </a>
              </div>
            </div>

            <!-- Rating Card -->
            <div class="bg-white rounded-2xl border border-neutral-200 p-6">
              <div class="flex items-center gap-3 mb-4">
                <div class="text-3xl font-bold text-secondary-600">{expedition.rating}</div>
                <div>
                  <div class="flex text-yellow-400">
                    {[1, 2, 3, 4, 5].map((i) => (
                      <svg class={`w-5 h-5 ${i <= Math.floor(expedition.rating) ? '' : 'opacity-30'}`} fill="currentColor" viewBox="0 0 20 20">
                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                      </svg>
                    ))}
                  </div>
                  <div class="text-sm text-neutral-500">{expedition.reviewCount} reviews</div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Mobile Sticky CTA -->
  <div class="fixed bottom-0 left-0 right-0 bg-white border-t border-neutral-200 p-4 shadow-lg z-40 lg:hidden">
    <div class="flex items-center justify-between">
      <div>
        <span class="text-sm text-neutral-500">Starting from</span>
        <div class="text-xl font-bold text-secondary-600">{formatPrice(expedition.price)}</div>
      </div>
      <a
        href={`https://wa.me/${SITE_CONFIG.phone.replace(/\s/g, '')}?text=Hi%2C%20I%27m%20interested%20in%20the%20${expedition.name}%20Expedition.`}
        target="_blank"
        rel="noopener noreferrer"
        class="btn-primary flex items-center gap-2"
      >
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
          <path d="M.057 24l1.687-6.163c-1.041-1.804-1.588-3.849-1.587-5.929C.15 5.184 5.185.15 12.201.15c3.611 0 7.043 1.411 9.592 3.959 2.549 2.549 3.96 5.98 3.96 9.592 0 7.016-5.035 12.05-12.051 12.05-1.981 0-3.91-.555-5.618-1.617l-6.177 1.688z" />
        </svg>
        Enquire Now
      </a>
    </div>
  </div>
</MainLayout>

