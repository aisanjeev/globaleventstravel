---
// Fetch offices and treks at request time for dynamic contact info
export const prerender = false;

import MainLayout from '@/layouts/MainLayout.astro';
import OfficesList from '@/components/offices/OfficesList.astro';
import { getSiteSettings, officesApi, treksApi } from '@/lib/api';
import type { Office } from '@/lib/types';
import type { Trek } from '@/lib/types';

const { siteConfig } = await getSiteSettings();

let offices: Office[] = [];
let trekOptions: { value: string; label: string }[] = [];
try {
  const [officesList, treksResponse] = await Promise.all([
    officesApi.list(),
    treksApi.list({ status: 'published', limit: 50 }),
  ]);
  offices = officesList;
  trekOptions = (treksResponse.items || []).map((t: Trek) => ({ value: t.slug, label: t.name }));
} catch (error) {
  console.error('Failed to fetch offices or treks:', error);
}
---

<MainLayout 
  title="Contact Us" 
  description="Get in touch with Global Events Travels. We're here to help plan your perfect Himalayan adventure."
>
  <!-- Page Header - Blue theme -->
  <section class="bg-gradient-to-br from-secondary-600 to-secondary-500 py-16 md:py-24">
    <div class="container-custom text-center text-white">
      <h1 class="text-4xl md:text-5xl font-bold mb-4 text-white">Contact Us</h1>
      <p class="text-lg text-white/80 max-w-2xl mx-auto">
        Have questions? We'd love to hear from you. Send us a message and we'll respond as soon as possible.
      </p>
    </div>
  </section>

  <!-- Contact Section -->
  <section class="section bg-neutral-50">
    <div class="container-custom">
      <div class="grid lg:grid-cols-3 gap-12">
        
        <!-- Contact Info -->
        <div class="lg:col-span-1">
          <h2 class="text-2xl font-bold text-secondary-600 mb-6">Get in Touch</h2>
          <p class="text-neutral-600 mb-8">
            Whether you're planning your first trek or your fiftieth, our team is here to help you every step of the way.
          </p>

          <div class="space-y-6">
            {offices.length === 0 && (
              <>
                <!-- Company contact when no offices configured -->
                <div class="flex gap-4">
                  <div class="w-12 h-12 bg-primary-100 rounded-lg flex items-center justify-center flex-shrink-0">
                    <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    </svg>
                  </div>
                  <div>
                    <h3 class="font-semibold text-secondary-600 mb-1">Our Office</h3>
                    <p class="text-neutral-600">{siteConfig.address}</p>
                  </div>
                </div>
                <div class="flex gap-4">
                  <div class="w-12 h-12 bg-primary-100 rounded-lg flex items-center justify-center flex-shrink-0">
                    <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                    </svg>
                  </div>
                  <div>
                    <h3 class="font-semibold text-secondary-600 mb-1">Phone</h3>
                    <a href={`tel:${siteConfig.phone}`} class="text-secondary-500 hover:text-primary-500">{siteConfig.phone}</a>
                  </div>
                </div>
                <div class="flex gap-4">
                  <div class="w-12 h-12 bg-primary-100 rounded-lg flex items-center justify-center flex-shrink-0">
                    <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                  </div>
                  <div>
                    <h3 class="font-semibold text-secondary-600 mb-1">Email</h3>
                    <a href={`mailto:${siteConfig.email}`} class="text-secondary-500 hover:text-primary-500">{siteConfig.email}</a>
                  </div>
                </div>
              </>
            )}
            {offices.length > 0 && (
              <p class="text-neutral-600 text-sm">
                We have {offices.length} office{offices.length > 1 ? 's' : ''} across India. Visit our locations with maps below.
              </p>
            )}

            <!-- Hours -->
            <div class="flex gap-4">
              <div class="w-12 h-12 bg-primary-100 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-secondary-600 mb-1">Working Hours</h3>
                <p class="text-neutral-600">Mon - Sat: 9:00 AM - 7:00 PM</p>
                <p class="text-neutral-600">Sun: 10:00 AM - 5:00 PM</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Contact Form -->
        <div class="lg:col-span-2">
          <div class="bg-white rounded-2xl border border-neutral-200 p-8 shadow-sm">
            <h2 class="text-2xl font-bold text-secondary-600 mb-6">Send us a Message</h2>
            
            <form id="contact-form" class="space-y-6">
              <div class="grid md:grid-cols-2 gap-6">
                <div>
                  <label for="name" class="input-label">Full Name *</label>
                  <input 
                    type="text" 
                    id="name" 
                    name="name" 
                    required
                    placeholder="Your name"
                    class="input"
                  />
                </div>
                <div>
                  <label for="email" class="input-label">Email Address *</label>
                  <input 
                    type="email" 
                    id="email" 
                    name="email" 
                    required
                    placeholder="your@email.com"
                    class="input"
                  />
                </div>
              </div>

              <div class="grid md:grid-cols-2 gap-6">
                <div>
                  <label for="phone" class="input-label">Phone Number</label>
                  <input 
                    type="tel" 
                    id="phone" 
                    name="phone"
                placeholder={offices.length > 0 ? offices[0].phone : siteConfig.phone}
                    class="input"
                  />
                </div>
                <div>
                  <label for="subject" class="input-label">Subject *</label>
                  <select id="subject" name="subject" required class="input">
                    <option value="">Select a subject</option>
                    <option value="trek-inquiry">Trek Inquiry</option>
                    <option value="booking">Booking Question</option>
                    <option value="custom-trek">Custom Trek Request</option>
                    <option value="feedback">Feedback</option>
                    <option value="other">Other</option>
                  </select>
                </div>
              </div>

              <div>
                <label for="trek" class="input-label">Interested Trek (Optional)</label>
                <select id="trek" name="trek" class="input">
                  <option value="">Select a trek</option>
                  {trekOptions.map((opt) => (
                    <option value={opt.value}>{opt.label}</option>
                  ))}
                  <option value="other">Other / Not Sure</option>
                </select>
              </div>

              <div>
                <label for="message" class="input-label">Message *</label>
                <textarea 
                  id="message" 
                  name="message" 
                  rows="5" 
                  required
                  placeholder="Tell us how we can help you..."
                  class="input resize-vertical"
                ></textarea>
                <p id="message-error" class="mt-2 text-sm text-red-600 hidden"></p>
              </div>

              <div class="flex items-start gap-3">
                <input 
                  type="checkbox" 
                  id="newsletter" 
                  name="newsletter"
                  class="mt-1 w-4 h-4 rounded border-neutral-300 text-primary-500 focus:ring-primary-500"
                />
                <label for="newsletter" class="text-sm text-neutral-600">
                  Subscribe to our newsletter for trek updates and special offers
                </label>
              </div>

              <button type="submit" class="btn-primary w-full md:w-auto">
                <span id="btn-text">Send Message</span>
                <svg id="btn-spinner" class="hidden w-5 h-5 ml-2 animate-spin" fill="none" viewBox="0 0 24 24">
                  <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                  <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                </svg>
              </button>
            </form>

            <!-- Success Message -->
            <div id="success-message" class="hidden mt-6 p-4 bg-green-50 border border-green-200 rounded-lg">
              <div class="flex items-center gap-3">
                <svg class="w-6 h-6 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <div>
                  <h3 class="font-semibold text-green-800">Message Sent!</h3>
                  <p class="text-green-700 text-sm">Thank you for reaching out. We'll get back to you within 24 hours.</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Our Offices Section -->
  <OfficesList />

  <!-- FAQ Section -->
  <section class="section bg-white">
    <div class="container-custom max-w-3xl">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-secondary-600 mb-4">Frequently Asked Questions</h2>
        <p class="text-neutral-600">Quick answers to common questions</p>
      </div>

      <div class="space-y-4">
        {[
          {
            question: 'How do I book a trek?',
            answer: 'You can book directly through our website by selecting a trek and filling out the booking form. Alternatively, contact us via phone or email, and our team will assist you.',
          },
          {
            question: 'What is your cancellation policy?',
            answer: 'Full refund for cancellations 15+ days before trek date. 50% refund for 7-14 days. No refund for cancellations within 7 days, but you can reschedule for a future date.',
          },
          {
            question: 'What equipment do I need to bring?',
            answer: 'We provide a detailed packing list after booking. Basic trekking gear, warm clothes, and personal items are required. We provide tents, sleeping bags, and group equipment.',
          },
          {
            question: 'Are your treks suitable for beginners?',
            answer: 'Yes! We have treks for all experience levels. Our "Easy" rated treks are perfect for beginners. We also provide fitness guidelines to help you prepare.',
          },
        ].map((faq, index) => (
          <details class="group bg-neutral-50 rounded-xl border border-neutral-200">
            <summary class="flex items-center justify-between p-6 cursor-pointer">
              <span class="font-semibold text-secondary-600">{faq.question}</span>
              <svg class="w-5 h-5 text-neutral-500 group-open:rotate-180 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
              </svg>
            </summary>
            <div class="px-6 pb-6">
              <p class="text-neutral-600">{faq.answer}</p>
            </div>
          </details>
        ))}
      </div>
    </div>
  </section>
</MainLayout>

<script define:vars={{ apiUrl: import.meta.env.PUBLIC_API_BASE_URL || 'http://localhost:8000' }}>
  const API_BASE_URL = apiUrl;
  const form = document.getElementById('contact-form');
  const btnText = document.getElementById('btn-text');
  const btnSpinner = document.getElementById('btn-spinner');
  const successMessage = document.getElementById('success-message');
  const messageInput = document.getElementById('message');
  const messageError = document.getElementById('message-error');

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    // Clear previous errors and show loading state
    if (messageError) {
      messageError.textContent = '';
      messageError.classList.add('hidden');
    }
    if (btnText) btnText.textContent = 'Sending...';
    btnSpinner?.classList.remove('hidden');

    // Get form data
    const formData = new FormData(form);
    const rawMessage = (formData.get('message') || '').toString().trim();

    // Frontend validation to match backend (min length 10)
    if (rawMessage.length < 10) {
      if (messageError) {
        messageError.textContent = 'Please enter at least 10 characters in your message.';
        messageError.classList.remove('hidden');
        if (messageInput) {
          messageInput.focus();
        }
      }
      if (btnText) btnText.textContent = 'Send Message';
      btnSpinner?.classList.add('hidden');
      return;
    }

    const contactData = {
      name: formData.get('name'),
      email: formData.get('email'),
      phone: formData.get('phone') || undefined,
      subject: formData.get('subject'),
      trek_interest: formData.get('trek') || undefined,
      message: rawMessage,
      newsletter_subscribe: formData.get('newsletter') === 'on',
    };

    try {
      const response = await fetch(`${API_BASE_URL}/api/v1/contacts`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify(contactData),
      });

      if (!response.ok) {
        // Try to surface validation error (e.g. from Pydantic)
        let errorMessage = 'Failed to submit';
        try {
          const errorBody = await response.json();
          if (errorBody && Array.isArray(errorBody.detail) && errorBody.detail.length > 0) {
            errorMessage = errorBody.detail[0].msg || errorMessage;
          }
        } catch (err) {
          // ignore JSON parse errors
        }
        throw new Error(errorMessage);
      }

      // Show success
      form.classList.add('hidden');
      successMessage?.classList.remove('hidden');
    } catch (error) {
      console.error('Error submitting contact form:', error);
      if (btnText) btnText.textContent = 'Send Message';
      btnSpinner?.classList.add('hidden');

      // Show specific validation error near the message field if available
      if (error instanceof Error && messageError) {
        messageError.textContent = error.message;
        messageError.classList.remove('hidden');
        if (messageInput) {
          messageInput.focus();
        }
      } else {
        alert('Failed to send message. Please try again.');
      }
    }
  });
</script>
