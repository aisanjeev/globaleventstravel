---
interface Props {
  title?: string;
  subtitle?: string;
  backgroundImage?: string;
}

const {
  title = "Adventure Awaits in the Himalayas",
  subtitle = "Discover breathtaking treks, experienced guides, and unforgettable experiences. Join us for the journey of a lifetime.",
  backgroundImage = "/images/hero/home-hero.jpg"
} = Astro.props;
---

<section class="relative min-h-[90vh] flex items-center justify-center overflow-hidden">
  <!-- Background with gradient overlay - Blue theme -->
  <div class="absolute inset-0 bg-gradient-to-br from-secondary-600/95 via-secondary-500/90 to-secondary-700/95">
    <!-- Pattern overlay -->
    <div class="absolute inset-0 opacity-5">
      <svg class="w-full h-full" xmlns="http://www.w3.org/2000/svg">
        <defs>
          <pattern id="mountain-pattern" x="0" y="0" width="100" height="100" patternUnits="userSpaceOnUse">
            <path d="M0 50 L25 25 L50 50 L75 25 L100 50 L100 100 L0 100 Z" fill="currentColor" class="text-white"/>
          </pattern>
        </defs>
        <rect width="100%" height="100%" fill="url(#mountain-pattern)"/>
      </svg>
    </div>
  </div>

  <!-- Animated shapes - Orange accents -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div class="absolute -top-40 -right-40 w-80 h-80 bg-primary-500/20 rounded-full blur-3xl animate-pulse"></div>
    <div class="absolute -bottom-40 -left-40 w-96 h-96 bg-primary-400/20 rounded-full blur-3xl animate-pulse delay-1000"></div>
    <div class="absolute top-1/2 left-1/4 w-64 h-64 bg-primary-300/10 rounded-full blur-2xl animate-pulse delay-500"></div>
  </div>

  <!-- Content -->
  <div class="relative z-10 container-custom text-center text-white px-4">
    <div class="max-w-4xl mx-auto">
      <!-- Badge with orange accent -->
      <div class="inline-flex items-center gap-2 bg-white/10 backdrop-blur-sm px-4 py-2 rounded-full mb-8 border border-white/20">
        <span class="w-2 h-2 bg-primary-500 rounded-full animate-pulse"></span>
        <span class="text-sm font-medium">Now booking for 2025 season</span>
      </div>

      <!-- Main heading -->
      <h1 class="text-4xl md:text-5xl lg:text-7xl font-bold mb-6 leading-tight text-white">
        {title}
      </h1>

      <!-- Subtitle -->
      <p class="text-lg md:text-xl text-white/80 mb-10 max-w-2xl mx-auto leading-relaxed">
        {subtitle}
      </p>

      <!-- CTA Buttons - Orange primary -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <a href="/treks" class="btn bg-gradient-to-r from-primary-600 to-primary-500 text-white hover:from-primary-700 hover:to-primary-600 px-8 py-4 text-lg font-semibold shadow-lg shadow-primary-500/30">
          Explore Treks
          <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
        <a href="/contact" class="btn border-2 border-white/50 text-white hover:bg-white/10 px-8 py-4 text-lg">
          Plan Your Trip
        </a>
      </div>

      <!-- Stats -->
      <div class="mt-16 grid grid-cols-2 md:grid-cols-4 gap-8 max-w-3xl mx-auto">
        <div class="text-center">
          <div class="text-3xl md:text-4xl font-bold text-primary-300">50+</div>
          <div class="text-white/60 text-sm mt-1">Trek Routes</div>
        </div>
        <div class="text-center">
          <div class="text-3xl md:text-4xl font-bold text-primary-300">10k+</div>
          <div class="text-white/60 text-sm mt-1">Happy Trekkers</div>
        </div>
        <div class="text-center">
          <div class="text-3xl md:text-4xl font-bold text-primary-300">15+</div>
          <div class="text-white/60 text-sm mt-1">Expert Guides</div>
        </div>
        <div class="text-center">
          <div class="text-3xl md:text-4xl font-bold text-primary-300">8+</div>
          <div class="text-white/60 text-sm mt-1">Years Experience</div>
        </div>
      </div>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
    <svg class="w-6 h-6 text-white/60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
    </svg>
  </div>
</section>
