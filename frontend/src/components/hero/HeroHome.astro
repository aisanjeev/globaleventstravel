---
import LeadCaptureForm from '@/components/forms/LeadCaptureForm';
import MobileStickyForm from '@/components/forms/MobileStickyForm';
import { Image } from 'astro:assets';
import { api } from '@/lib/api';

interface Props {
  backgroundImage?: string;
}

const {
  backgroundImage = "/images/home/hero-bg.webp"
} = Astro.props;

interface PageSection {
  key: string;
  title?: string | null;
  subtitle?: string | null;
  badge_text?: string | null;
  cta_label?: string | null;
  cta_url?: string | null;
}

let heroContent: PageSection | null = null;
let primaryCta: { label: string; url: string } = { label: 'Explore Treks', url: '/treks' };
let secondaryCta: { label: string; url: string } = { label: 'Get Free Itinerary on WhatsApp', url: '#whatsapp-form' };

try {
  const sections = await api.get<PageSection[]>(`/content/home`);

  const heroSection = sections.find((s) => s.key === "hero");
  const primarySection = sections.find((s) => s.key === "hero_primary_cta");
  const secondarySection = sections.find((s) => s.key === "hero_secondary_cta");

  if (heroSection) heroContent = heroSection;
  if (primarySection?.cta_label) primaryCta = { label: primarySection.cta_label, url: primarySection.cta_url || '/treks' };
  if (secondarySection?.cta_label) secondaryCta = { label: secondarySection.cta_label, url: secondarySection.cta_url || '#whatsapp-form' };
} catch (error) {
  console.error('Failed to fetch home hero content, using defaults:', error);
}
---

<section id="whatsapp-form" class="relative min-h-[90vh] lg:min-h-screen flex items-center overflow-hidden scroll-mt-20">
  <!-- Background Image -->
  <div class="absolute inset-0">
    <Image
      src={backgroundImage}
      alt="Himalayan mountain landscape"
      class="w-full h-full object-cover"
      width={800}
      height={600}
      loading="eager"
      fetchpriority="high"
    />
    <!-- Gradient overlay for text readability -->
    <div class="absolute inset-0 bg-gradient-to-r from-secondary-600/90 via-secondary-600/80 to-secondary-600/60 lg:to-transparent"></div>
    <!-- Additional overlay for form area on desktop -->
    <div class="hidden lg:block absolute inset-0 bg-gradient-to-l from-black/30 via-transparent to-transparent"></div>
  </div>

  <!-- Animated accent shapes -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div class="absolute -top-40 -right-40 w-80 h-80 bg-primary-500/10 rounded-full blur-3xl animate-pulse"></div>
    <div class="absolute -bottom-40 -left-40 w-96 h-96 bg-primary-400/10 rounded-full blur-3xl animate-pulse delay-1000"></div>
  </div>

  <!-- Main Content Container -->
  <div class="relative z-10 container-custom w-full py-12 lg:py-0">
    <div class="grid lg:grid-cols-5 gap-8 lg:gap-12 items-center">
      
      <!-- Left Content (60% on desktop) -->
      <div class="lg:col-span-3 text-white">
        <!-- Badge -->
        {((heroContent?.badge_text) || 'Now booking for 2026 season') && (
          <div class="inline-flex items-center gap-2 bg-white/10 backdrop-blur-sm px-4 py-2 rounded-full mb-6 border border-white/20">
            <span class="w-2 h-2 bg-primary-500 rounded-full animate-pulse"></span>
            <span class="text-sm font-medium">
              {heroContent?.badge_text || 'Now booking for 2026 season'}
            </span>
          </div>
        )}

        <!-- Main Headline - Booking focused -->
        <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold mb-4 leading-tight text-white drop-shadow-lg">
          {heroContent?.title || 'Plan Your Perfect Himalayan Trek'}
        </h1>

        <!-- Subheadline -->
        <p class="text-lg md:text-xl text-white/90 mb-8 max-w-xl leading-relaxed drop-shadow">
          {heroContent?.subtitle || 'Book trusted treks across the Himalayas with expert guides.'}
        </p>

        <!-- Primary & Secondary CTAs -->
        <div class="flex flex-col sm:flex-row gap-4 mb-8">
          <a
            href={primaryCta.url}
            class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-gradient-to-r from-primary-600 to-primary-500 hover:from-primary-700 hover:to-primary-600 text-white font-semibold rounded-xl shadow-lg shadow-primary-500/30 transition-all duration-200 text-lg"
          >
            {primaryCta.label}
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
          <a
            href={secondaryCta.url}
            class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-white/10 hover:bg-white/20 backdrop-blur-sm border border-white/30 text-white font-semibold rounded-xl transition-all duration-200 text-lg"
          >
            {secondaryCta.label}
          </a>
        </div>

        <!-- Subtle stats (small white text) - moved to Why Choose Us, minimal here -->
        <div class="flex flex-wrap gap-6 text-white/70 text-sm mb-6">
          <span>10,000+ Happy Trekkers</span>
          <span>4.8â˜… Average Rating</span>
        </div>

        <!-- Trust Badges (Mobile) -->
        <div class="flex flex-wrap gap-4 mt-6 lg:hidden">
          <div class="flex items-center gap-2 text-white/80 text-sm">
            <svg class="w-5 h-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <span>Free Itinerary</span>
          </div>
          <div class="flex items-center gap-2 text-white/80 text-sm">
            <svg class="w-5 h-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <span>WhatsApp Delivery</span>
          </div>
          <div class="flex items-center gap-2 text-white/80 text-sm">
            <svg class="w-5 h-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <span>No Spam</span>
          </div>
        </div>
      </div>

      <!-- Right Form Panel (40% on desktop) - Hidden on mobile, minimal variant -->
      <div class="hidden lg:block lg:col-span-2">
        <LeadCaptureForm client:idle variant="minimal" />
      </div>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce hidden lg:block">
    <svg class="w-6 h-6 text-white/60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
    </svg>
  </div>
</section>

<!-- Mobile Sticky Form (only rendered on mobile) -->
<MobileStickyForm client:idle />
