---
import type { Expedition } from '@/lib/types';

interface Props {
  expedition: Expedition;
}

const { expedition } = Astro.props;

const difficultyColors = {
  advanced: 'bg-orange-100 text-orange-800',
  expert: 'bg-red-100 text-red-800',
  extreme: 'bg-purple-100 text-purple-800',
};

const formatPrice = (price: number) => {
  return new Intl.NumberFormat('en-IN', {
    style: 'currency',
    currency: 'INR',
    maximumFractionDigits: 0,
  }).format(price);
};
---

<a href={`/expeditions/${expedition.slug}`} class="group block">
  <div class="bg-white rounded-2xl overflow-hidden border border-neutral-200 hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
    <!-- Image -->
    <div class="relative h-56 overflow-hidden">
      <img
        src={expedition.image}
        alt={expedition.name}
        class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
        loading="lazy"
      />
      
      <!-- Altitude Badge -->
      <div class="absolute top-4 left-4 bg-black/70 backdrop-blur-sm text-white px-3 py-1.5 rounded-full text-sm font-bold">
        {expedition.summitAltitude.toLocaleString()}m
      </div>
      
      <!-- Success Rate Badge -->
      <div class="absolute top-4 right-4 bg-green-500/90 backdrop-blur-sm text-white px-3 py-1.5 rounded-full text-sm font-bold flex items-center gap-1">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        {expedition.successRate}%
      </div>

      <!-- Gradient Overlay -->
      <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent"></div>
      
      <!-- Location -->
      <div class="absolute bottom-4 left-4 text-white">
        <p class="text-sm opacity-90 flex items-center gap-1">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
          </svg>
          {expedition.location}
        </p>
      </div>
    </div>

    <!-- Content -->
    <div class="p-6">
      <!-- Title & Difficulty -->
      <div class="flex items-start justify-between gap-3 mb-3">
        <h3 class="text-xl font-bold text-secondary-600 group-hover:text-primary-600 transition-colors">
          {expedition.name}
        </h3>
        <span class={`px-2.5 py-1 rounded-full text-xs font-semibold capitalize ${difficultyColors[expedition.difficulty]}`}>
          {expedition.difficulty}
        </span>
      </div>

      <!-- Description -->
      <p class="text-neutral-600 text-sm mb-4 line-clamp-2">
        {expedition.shortDescription}
      </p>

      <!-- Quick Stats -->
      <div class="grid grid-cols-3 gap-3 mb-4 py-4 border-y border-neutral-100">
        <div class="text-center">
          <div class="flex items-center justify-center text-primary-500 mb-1">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
          </div>
          <p class="text-xs text-neutral-500">Duration</p>
          <p class="font-semibold text-neutral-800">{expedition.duration} Days</p>
        </div>
        <div class="text-center">
          <div class="flex items-center justify-center text-primary-500 mb-1">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18" />
            </svg>
          </div>
          <p class="text-xs text-neutral-500">Summit</p>
          <p class="font-semibold text-neutral-800">{(expedition.summitAltitude/1000).toFixed(1)}km</p>
        </div>
        <div class="text-center">
          <div class="flex items-center justify-center text-primary-500 mb-1">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
          </div>
          <p class="text-xs text-neutral-500">Group</p>
          <p class="font-semibold text-neutral-800">{expedition.groupSize.min}-{expedition.groupSize.max}</p>
        </div>
      </div>

      <!-- Rating & Price -->
      <div class="flex items-center justify-between">
        <div class="flex items-center gap-2">
          <div class="flex items-center text-yellow-500">
            <svg class="w-5 h-5 fill-current" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
            </svg>
            <span class="ml-1 font-semibold text-neutral-800">{expedition.rating}</span>
          </div>
          <span class="text-neutral-400 text-sm">({expedition.reviewCount} reviews)</span>
        </div>
        <div class="text-right">
          <span class="text-xs text-neutral-500">From</span>
          <p class="text-xl font-bold text-secondary-600">{formatPrice(expedition.price)}</p>
        </div>
      </div>
    </div>
  </div>
</a>

