---
import type { Office } from '@/lib/types';

interface Props {
  office: Office;
}

const { office } = Astro.props;
---

<div class="bg-white rounded-xl border border-neutral-200 overflow-hidden hover:shadow-lg transition-shadow duration-300">
  <!-- Map Preview -->
  <div class="h-48 bg-neutral-100 relative overflow-hidden">
    <iframe
      src={`https://maps.google.com/maps?q=${office.coordinates.lat},${office.coordinates.lng}&z=15&output=embed`}
      class="w-full h-full border-0"
      loading="lazy"
      title={`${office.name} location`}
    ></iframe>
  </div>

  <!-- Office Details -->
  <div class="p-6">
    <h3 class="text-xl font-bold text-secondary-600 mb-3">{office.name}</h3>
    
    <!-- Address -->
    <div class="flex items-start gap-3 mb-4">
      <svg class="w-5 h-5 text-primary-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
      </svg>
      <div>
        <p class="text-neutral-700 text-sm leading-relaxed">{office.address}</p>
        <p class="text-neutral-600 text-sm">{office.city}, {office.state} - {office.pincode}</p>
        {office.landmarks && (
          <p class="text-neutral-500 text-xs mt-1 italic">Near: {office.landmarks}</p>
        )}
      </div>
    </div>

    <!-- Contact Info -->
    <div class="space-y-2 mb-5">
      <a href={`tel:${office.phone.replace(/\s/g, '')}`} class="flex items-center gap-3 text-neutral-700 hover:text-primary-600 transition-colors">
        <svg class="w-5 h-5 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
        </svg>
        <span class="text-sm">{office.phone}</span>
      </a>
      <a href={`mailto:${office.email}`} class="flex items-center gap-3 text-neutral-700 hover:text-primary-600 transition-colors">
        <svg class="w-5 h-5 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
        </svg>
        <span class="text-sm">{office.email}</span>
      </a>
    </div>

    <!-- Action Buttons -->
    <div class="flex gap-3">
      <a
        href={office.mapUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="flex-1 inline-flex items-center justify-center gap-2 px-4 py-2.5 bg-primary-500 text-white font-medium rounded-lg hover:bg-primary-600 transition-colors text-sm"
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7" />
        </svg>
        Directions
      </a>
      <button
        class="copy-address-btn flex-1 inline-flex items-center justify-center gap-2 px-4 py-2.5 border-2 border-primary-500 text-primary-600 font-medium rounded-lg hover:bg-primary-50 transition-colors text-sm"
        data-address={`${office.address}, ${office.city}, ${office.state} - ${office.pincode}`}
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 5H6a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2v-1M8 5a2 2 0 002 2h2a2 2 0 002-2M8 5a2 2 0 012-2h2a2 2 0 012 2m0 0h2a2 2 0 012 2v3m2 4H10m0 0l3-3m-3 3l3 3" />
        </svg>
        Copy
      </button>
    </div>
  </div>
</div>

<script>
  // Copy address functionality
  document.querySelectorAll('.copy-address-btn').forEach(btn => {
    btn.addEventListener('click', async () => {
      const address = btn.getAttribute('data-address');
      if (address) {
        try {
          await navigator.clipboard.writeText(address);
          const originalText = btn.innerHTML;
          btn.innerHTML = `
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            Copied!
          `;
          setTimeout(() => {
            btn.innerHTML = originalText;
          }, 2000);
        } catch (err) {
          console.error('Failed to copy address:', err);
        }
      }
    });
  });
</script>

