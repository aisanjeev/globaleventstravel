---
import TestimonialCard from './TestimonialCard.astro';
import { testimonialsApi } from '@/lib/api';
import type { Testimonial } from '@/lib/types';

interface Props {
  showTitle?: boolean;
  limit?: number;
  showFilters?: boolean;
}

const { showTitle = true, limit, showFilters = false } = Astro.props;

let testimonials: Testimonial[] = [];
let trekNames: string[] = [];

try {
  if (limit) {
    testimonials = await testimonialsApi.getFeatured(limit);
  } else {
    const response = await testimonialsApi.list(0, 50);
    testimonials = response.items || [];
  }

  trekNames = [
    ...new Set(
      testimonials
        .filter((t) => t.trek_name)
        .map((t) => t.trek_name as string),
    ),
  ];
} catch (error) {
  console.error('Failed to fetch testimonials from API:', error);
}
---

<section class="section bg-neutral-50">
  <div class="container-custom">
    {showTitle && (
      <div class="text-center mb-12">
        <span class="inline-block px-4 py-1.5 bg-primary-100 text-primary-700 rounded-full text-sm font-medium mb-4">
          Traveler Stories
        </span>
        <h2 class="text-3xl md:text-4xl font-bold text-secondary-600 mb-4">
          What Our Trekkers Say
        </h2>
        <p class="text-lg text-neutral-600 max-w-2xl mx-auto">
          Real experiences from real adventurers. Join thousands of happy trekkers who've explored the Himalayas with us.
        </p>
      </div>
    )}

    {showFilters && (
      <div class="flex flex-wrap items-center justify-center gap-4 mb-10">
        <!-- Sort Dropdown -->
        <div class="flex items-center gap-2">
          <label for="sort-testimonials" class="text-sm text-neutral-600">Sort by:</label>
          <select
            id="sort-testimonials"
            class="px-3 py-2 border border-neutral-200 rounded-lg text-sm bg-white focus:border-primary-500 focus:ring-1 focus:ring-primary-500"
          >
            <option value="latest">Latest</option>
            <option value="highest">Highest Rated</option>
            <option value="helpful">Most Helpful</option>
          </select>
        </div>

        <!-- Rating Filter -->
        <div class="flex items-center gap-2">
          <label for="filter-rating" class="text-sm text-neutral-600">Rating:</label>
          <select
            id="filter-rating"
            class="px-3 py-2 border border-neutral-200 rounded-lg text-sm bg-white focus:border-primary-500 focus:ring-1 focus:ring-primary-500"
          >
            <option value="all">All Ratings</option>
            <option value="5">5 Stars</option>
            <option value="4">4+ Stars</option>
            <option value="3">3+ Stars</option>
          </select>
        </div>

        <!-- Trek Filter -->
        <div class="flex items-center gap-2">
          <label for="filter-trek" class="text-sm text-neutral-600">Trek:</label>
          <select
            id="filter-trek"
            class="px-3 py-2 border border-neutral-200 rounded-lg text-sm bg-white focus:border-primary-500 focus:ring-1 focus:ring-primary-500"
          >
            <option value="all">All Treks</option>
            {trekNames.map((trek) => (
              <option value={trek}>{trek}</option>
            ))}
          </select>
        </div>
      </div>
    )}

    <!-- Testimonials Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {testimonials.map((testimonial) => (
        <TestimonialCard testimonial={testimonial} />
      ))}
    </div>

    <!-- Summary Stats -->
    <div class="mt-12 bg-white rounded-2xl border border-neutral-200 p-8">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6 text-center">
        <div>
          <div class="text-3xl font-bold text-secondary-600">4.8</div>
          <div class="flex items-center justify-center gap-1 mt-2">
            {[1, 2, 3, 4, 5].map((i) => (
              <svg class={`w-4 h-4 ${i <= 4 ? 'text-yellow-400' : 'text-yellow-200'}`} fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
              </svg>
            ))}
          </div>
          <div class="text-sm text-neutral-500 mt-1">Average Rating</div>
        </div>
        <div>
          <div class="text-3xl font-bold text-secondary-600">500+</div>
          <div class="text-sm text-neutral-500 mt-2">Total Reviews</div>
        </div>
        <div>
          <div class="text-3xl font-bold text-secondary-600">98%</div>
          <div class="text-sm text-neutral-500 mt-2">Would Recommend</div>
        </div>
        <div>
          <div class="text-3xl font-bold text-secondary-600">10,000+</div>
          <div class="text-sm text-neutral-500 mt-2">Happy Trekkers</div>
        </div>
      </div>
    </div>

    {limit && testimonials.length > 0 && (
      <div class="text-center mt-10">
        <a href="/testimonials" class="btn-secondary">
          Read All Reviews
          <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
      </div>
    )}
  </div>
</section>

