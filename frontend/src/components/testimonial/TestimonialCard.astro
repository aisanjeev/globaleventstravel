---
import type { Testimonial } from '@/lib/types';

interface Props {
  testimonial: Testimonial;
  expanded?: boolean;
}

const { testimonial, expanded = false } = Astro.props;

// Star rating component
const renderStars = (rating: number) => {
  return Array(5).fill(0).map((_, i) => ({
    filled: i < Math.floor(rating),
    half: i === Math.floor(rating) && rating % 1 !== 0,
  }));
};

const formatDate = (dateStr: string) => {
  return new Date(dateStr).toLocaleDateString('en-IN', {
    year: 'numeric',
    month: 'short',
  });
};
---

<div class="bg-white p-6 md:p-8 rounded-2xl border border-neutral-200 shadow-sm hover:shadow-lg transition-all duration-300 h-full flex flex-col">
  <!-- Header: Rating & Verified Badge -->
  <div class="flex items-center justify-between mb-4">
    <!-- Star Rating -->
    <div class="flex items-center gap-1">
      {renderStars(testimonial.rating).map(({ filled }) => (
        <svg
          class={`w-5 h-5 ${filled ? 'text-yellow-400' : 'text-neutral-200'}`}
          fill="currentColor"
          viewBox="0 0 20 20"
        >
          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
        </svg>
      ))}
      <span class="ml-2 text-sm font-semibold text-neutral-800">{testimonial.rating.toFixed(1)}</span>
    </div>

    <!-- Verified Badge -->
    {testimonial.verified && (
      <div class="flex items-center gap-1 bg-green-50 text-green-700 px-2.5 py-1 rounded-full text-xs font-medium">
        <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
        </svg>
        Verified
      </div>
    )}
  </div>

  <!-- Quote Icon -->
  <div class="mb-4">
    <svg class="w-8 h-8 text-primary-200" fill="currentColor" viewBox="0 0 24 24">
      <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z" />
    </svg>
  </div>

  <!-- Testimonial Text -->
  <blockquote class={`text-neutral-700 leading-relaxed mb-4 flex-grow ${expanded ? '' : 'line-clamp-4'}`}>
    "{testimonial.testimonial}"
  </blockquote>

  <!-- Tags -->
  {testimonial.tags && testimonial.tags.length > 0 && (
    <div class="flex flex-wrap gap-2 mb-4">
      {testimonial.tags.map((tag) => (
        <span class="bg-primary-50 text-primary-700 px-2.5 py-1 rounded-full text-xs font-medium">
          {tag}
        </span>
      ))}
    </div>
  )}

  <!-- Trek Reference -->
  {testimonial.trek_name && (
    <div class="flex items-center gap-2 mb-4 py-2 px-3 bg-secondary-50 rounded-lg">
      <svg class="w-4 h-4 text-secondary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
      </svg>
      <span class="text-sm font-medium text-secondary-600">{testimonial.trek_name}</span>
    </div>
  )}

  <!-- Author Info -->
  <div class="flex items-center justify-between pt-4 border-t border-neutral-100">
    <div class="flex items-center gap-3">
      <div class="w-11 h-11 rounded-full bg-neutral-100 overflow-hidden flex-shrink-0">
        {testimonial.image_url ? (
          <img
            src={testimonial.image_url}
            alt={testimonial.name}
            class="w-full h-full object-cover"
            loading="lazy"
          />
        ) : (
          <div class="w-full h-full flex items-center justify-center bg-primary-100 text-primary-600 font-semibold text-lg">
            {testimonial.name.charAt(0)}
          </div>
        )}
      </div>
      <div>
        <div class="font-semibold text-secondary-600 text-sm">{testimonial.name}</div>
        <div class="text-xs text-neutral-500">
          {testimonial.role}{testimonial.location ? `, ${testimonial.location}` : ''}
        </div>
      </div>
    </div>

    <!-- Date & Helpful -->
    <div class="text-right">
      <div class="text-xs text-neutral-400">{formatDate(testimonial.date)}</div>
      {testimonial.helpful_count && testimonial.helpful_count > 0 && (
        <div class="text-xs text-neutral-500 flex items-center gap-1 mt-1 justify-end">
          <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 10h4.764a2 2 0 011.789 2.894l-3.5 7A2 2 0 0115.263 21h-4.017c-.163 0-.326-.02-.485-.06L7 20m7-10V5a2 2 0 00-2-2h-.095c-.5 0-.905.405-.905.905 0 .714-.211 1.412-.608 2.006L7 11v9m7-10h-2M7 20H5a2 2 0 01-2-2v-6a2 2 0 012-2h2.5" />
          </svg>
          {testimonial.helpful_count} found helpful
        </div>
      )}
    </div>
  </div>
</div>
