---
import type { Trek } from '@/lib/types';
import TrekCard from './TrekCard.astro';

interface Props {
  treks: Trek[];
}

const { treks } = Astro.props;
---

<div class="flex gap-6 overflow-x-auto pb-4 -mx-4 px-4 md:mx-0 md:px-0 md:overflow-visible md:grid md:grid-cols-2 lg:grid-cols-3 md:gap-6 snap-x snap-mandatory md:snap-none">
  {treks.map((trek) => (
    <div class="flex-shrink-0 w-[85vw] sm:w-80 md:w-auto snap-center">
      <TrekCard trek={trek} />
    </div>
  ))}
</div>
